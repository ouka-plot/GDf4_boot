{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker-CMake-Configure",
            "type": "shell",
            "command": "docker run --rm -v \"${workspaceFolder}:/app\" gd32-env cmake -BOutput -GNinja",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Docker-Ninja-Build",
            "type": "shell",
            "command": "docker run --rm -v \"${workspaceFolder}:/app\" gd32-env ninja -C Output",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "autoDetect",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^/app/(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Clean Output",
            "type": "shell",
            "command": "Remove-Item -Recurse -Force Output/*",
            "problemMatcher": []
        },
        {
            "label": "Flash-Device",
            "type": "shell",
            "command": ".\\flash.bat",
            "group": "build",
            "dependsOn": [
                "Docker-Ninja-Build"
            ],
            "problemMatcher": []
        },
